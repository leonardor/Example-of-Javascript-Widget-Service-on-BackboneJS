<h3>Adauga comentariul tau:</h3>
<form id="form-comment" action="" method="post" onsubmit="return false">
  	<div class="name">
  		<div><label><%= lang.form.label.name %></label><sup>*</sup>:</div>
  		<div><input type="text" id="name" name="name" title="<%= lang.form.input.name.title %>" value="<%= name %>"/></div>
  	</div>
  	<div class="email">
		<div><label><%= lang.form.label.email %></label><sup>*</sup>:</div>
		<div><input type="text" id="email" name="email" title="<%= lang.form.input.email.title %>" value="<%= email %>"/></div>
	</div>
	<div class="title">
		<div><label><%= lang.form.label.title %></label><sup>*</sup>:</div>
		<div><input type="text" id="title" name="title" title="<%= lang.form.input.title.title %>" value="<%= title %>"/></div>
	</div>
	<div class="message">
   		<div><label><%= lang.form.label.message %></label><sup>*</sup>:</div>
   		<div></div><textarea id="message" name="message" cols="50" rows="10" title="<%= lang.form.textarea.message.title %>" wrap="virtual"><%= message %></textarea></div>
	</div>
	<div class="submit">
		<input type="hidden" name="topic_id" id="topic_id" value="<%= topic_id %>"/>
		<div><input class="add" type="submit" id="btnAdd" name="btnAdd" value="<%= lang.form.button.add %>" onclick="return false"/></div>
	</div>
</form>